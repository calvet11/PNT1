@model ProyectoFinal.Models.CarritoDeCompra

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Compra</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClienteId" class="control-label"></label>
                <select asp-for="ClienteId" class ="form-control" asp-items="ViewBag.ClienteId">
                    <option selected="selected" value="">Selecciona un Cliente</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ProductoId" class="control-label"></label>
                <select asp-for="ProductoId" class ="form-control" asp-items="ViewBag.ProductoId">
                    <option selected="selected" value="">Selecciona un Producto</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Cantidad" class="control-label"></label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetodoDePago" class="control-label"></label>
                <select asp-for="MetodoDePago" class="form-control" asp-items="Html.GetEnumSelectList<MetodoDePago>()">
                    <option selected="selected" value="">Selecciona uno</option>
                </select>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
